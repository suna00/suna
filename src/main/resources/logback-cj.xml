<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--<property name="LOG_PATH" value="/data/resource/log/application"/>-->
    <!--<property name="LOG_PATH" value="/Users/juneyoungoh/Documents/logTest/errlogs" />-->
    <property name="LOG_PATH" value="/data/ion/logs/icelogs" />
    <!--<property name="ERR_PATH" value="/data/ion/logs/errlogs" />-->

    <!-- 콘솔 로그 출력 -->
    <appender level="consoleAppender" name="TEXT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-4relative - [%thread] %logger{35} : %msg %n</Pattern>
        </encoder>
    </appender>

    <appender name="catalinaAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/out.log</File>
        <!--<prudent>true</prudent>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/ice_%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>

        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-4relative - [%thread] %logger{35} : %msg %n</Pattern>
        </encoder>
    </appender>

    <!-- ERROR 레벨 이하 로그를 콘솔 및 파일로 출력 -->
    <root level="ERROR">
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="catalinaAppender"/>
    </root>
</configuration>