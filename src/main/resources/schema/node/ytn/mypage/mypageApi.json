  {
    "typeId": "apiConfig",
    "category": "mypage",
    "apiId": "writableReview_backup",
    "apiName": "ssssssss작성가능한 리뷰ssssssss",
    "method": "GET",
    "parameters": [
    ],
    "config": {
      "items": {
        "select" : {
          "ds" : "ytnDevDb",
          "resultType" : "list",
          "sql" : "SELECT c.orderProductId,c.orderId,b.created as orderCreated,c.productId,c.baseOptionItemId, adddate(a.sendingDate, INTERVAL 30 DAY) AS writeEndDate FROM orderdeliveryprice a, purchaseorder b, orderProduct c WHERE a.orderId = b.purchaseOrderId AND find_in_set(c.orderProductId, a.orderProductIds) AND adddate(a.sendingDate, INTERVAL 30 DAY) >= now() AND b.memberNo = @{memberNo} ORDER BY c.orderProductId DESC "
        },
        "response" :{
          "_all_": "",
          "productId" : {"propertyType" : "productOption.productId", "field" : "productId", "referenceView": true},
          "baseOptionItemId" : {"propertyType" : "cartProduct.baseOptionItemId", "field" : "baseOptionItemId", "referenceView": false}
        }
      }
    }
  },
  {
