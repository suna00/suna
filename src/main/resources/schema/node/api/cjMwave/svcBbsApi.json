[
  {
    "typeId": "apiConfig",
    "category": "svcBbs",
    "apiId": "IfNtb001",
    "apiName": "고객 공지사항 목록 조회",
    "method": "GET",
    "parameters": [
      {
        "paramName": "page",
        "required": false
      },
      {
        "paramName": "pageSize",
        "required": false
      },
      {
        "paramName": "sorting",
        "required": false
      },
      {
        "paramName": "langCd",
        "required": false
      },
      {
        "paramName": "svcTermlDivCd",
        "required": true
      },
      {
        "paramName": "ntfLargeCtgCd",
        "required": false
      },
      {
        "paramName": "searchKeyword",
        "required": false
      }
    ],
    "config": {
      "typeId": "ntfBbs",
      "query": [
        {
          "field": "svcTermlDivCd",
          "method": "matching",
          "value": "{{:svcTermlDivCd}}"
        },
        {
          "field": "ntfLargeCtgCd",
          "method": "matching",
          "value": "{{:ntfLargeCtgCd}}"
        },
        {
          "field": "showYn",
          "method": "matching",
          "value": "true"
        },
        {
          "searchFields":"ntfBbsNm_{{:langCd}},ntfSbst_{{:langCd}}",
          "searchValue":"{{:searchKeyword}}"
        },
        {
          "sorting": "{{:sorting}}"
        },
        {
          "page": "{{:page}}",
          "pageSize": "{{:pageSize}}"
        }
      ],
      "response": {
        "ntfBbsSeq": "",
        "ntfBbsNm": "",
        "ntfBbsTgtCd": "",
        "ntfBbsTypeCd": "",
        "ntfLargeCtgCd": "",
        "ntfMidCtgCd": "",
        "svcTermlDivCd": "",
        "pstngStDt": "",
        "pstngFnsDt": "",
        "showYn": "",
        "ntfSbst": "",
        "hitNum": "",
        "owner": "",
        "created": ""
      }
    }
  },
  {
    "typeId": "apiConfig",
    "category": "svcBbs",
    "apiId": "IfNtb002",
    "apiName": "고객 공지사항 상세 조회",
    "method": "GET",
    "parameters": [
      {
        "paramName": "ntfBbsSeq",
        "required": true
      }
    ],
    "config": {
      "root": {
        "typeId": "ntfBbs",
        "id": "{{:ntfBbsSeq}}",
        "response": {
          "ntfBbsSeq": "",
          "ntfBbsNm": "",
          "ntfBbsTgtCd": "",
          "ntfBbsTypeCd": "",
          "ntfLargeCtgCd": "",
          "ntfMidCtgCd": "",
          "svcTermlDivCd": "",
          "pstngStDt": "",
          "pstngFnsDt": "",
          "ntfSbst": "",
          "hitNum": "",
          "owner": "",
          "created": "",
          "nextItem": {
            "typeId": "ntfBbs",
            "query": [
              {
                "field": "ntfBbsSeq",
                "method": "under",
                "value": "{{:ntfBbsSeq}}"
              },
              {
                "sorting": "ntfBbsSeq desc",
                "limit": "1"
              }
            ],
            "response": {
              "ntfBbsSeq": "",
              "ntfLargeCtgCd": "",
              "ntfMidCtgCd": "",
              "ntfBbsNm": "",
              "created": ""
            }
          },
          "preItem": {
            "typeId": "ntfBbs",
            "query": [
              {
                "field": "ntfBbsSeq",
                "method": "excess",
                "value": "{{:ntfBbsSeq}}"
              },
              {
                "sorting": "ntfBbsSeq asc",
                "limit": "1"
              }
            ],
            "response": {
              "ntfBbsSeq": "",
              "ntfLargeCtgCd": "",
              "ntfMidCtgCd": "",
              "ntfBbsNm": "",
              "created": ""
            }
          }
        }
      },
      "hitNumUpdate": {
        "typeId": "ntfBbs",
        "resultType": "none",
        "event": "view",
        "response":{
          "hitNum":""
        }
      }
    }
  },
  {
